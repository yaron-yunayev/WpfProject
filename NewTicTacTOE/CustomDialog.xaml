<Window x:Class="NewTicTacTOE.CustomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notification" Height="200" Width="300" Background="#111111" WindowStartupLocation="CenterOwner">
    <Grid>
        <Border Background="#222222" BorderBrush="#00FF00" BorderThickness="2" Margin="10">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="MessageTextBlock" FontSize="16" FontWeight="Bold" Foreground="#00FF00" TextWrapping="Wrap" HorizontalAlignment="Center" Margin="10"/>
                <Button Content="OK" Width="100" Height="30" Margin="10" Background="#00FF00" Foreground="#111111" Click="OkButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
